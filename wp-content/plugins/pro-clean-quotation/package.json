{
  "name": "pro-clean-quotation-tests",
  "version": "1.0.0",
  "description": "JavaScript tests for Pro Clean Quotation plugin",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/dom": "^9.3.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/**/*.min.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/js/setup.js"],
    "testMatch": [
      "**/tests/js/**/*.test.js"
    ]
  }
}
